style. 
    body { 
        background-color: rgba(214, 237, 255); 
        font-family: Verdana, Georgia, Times, 'Times New Roman', serif
    }
    p, i, h1, h2, h3, h4, h5, small, label {
        margin-left: 7px;
        color : black
    }
    a, span {
        color: black
    }
    button {
        margin-left: 10px
    }
    .small {
        font-size: 11px
    }
    .taskcard, .usercard {
        background-color: #bfffff;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        width: 30%;
        margin: 2.5%
    }
    .taskcard:hover, .usercard:hover {
        box-shadow: 0 8px 16px 0 rgba(255,255,255,0.5);
    }
    #main {
        border-top: 1.5px solid black;
    }
    #menu a:hover, #openmenu:hover {
        color: grey;
        transition: 0.3s;
    
