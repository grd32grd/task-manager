    //Side Bar
    #menu {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: black;
        overflow-x: hidden;
        padding-top: 60px;
        transition: 0.5s;
    }
    #menu a {
        padding: 8px 8px 8px 32px;
        text-decoration: none;
        display: block;
        transition: 0.3s;
        color: grey
    }
    #menu .closebtn {
        position: absolute;
        top: 0;
        right: 25px;
        font-size: 36px;
        margin-left: 50px;
    }
    #menu a:hover {
        color: white
    }
    #main {
        transition: margin-left .5s;
        padding: 16px;
    }
    @media screen and (max-height: 450px) {
        #menu {padding-top: 15px;};
        #menu a {font-size: 18px;}
    }



