style. 
    body { 
        background-color: #1c1e2e; 
        font-family: Verdana, Georgia, Times, 'Times New Roman', serif
    }
    p, i, h1, h2, h3, h4, h5, small {
        margin-left: 7px;
        color : white
    }
    a, span {
        color: white
    }
    button {
        margin-left: 10px
    }
    label {
        margin-left: 7px;
        margin-right: 7px;
        color: white
    }
    .small {
        font-size: 11px
    }
    .taskcard, .usercard {
        background-color: #bfffff;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        width: 30%;
        margin: 2.5%
    }
    .taskcard:hover, .usercard:hover {
        box-shadow: 0 8px 16px 0 rgba(255,255,255,0.5);
    }
    #main {
        border-top: 1.5px solid white
    }






