html
    head
        title Task Manager / Home
    body
        if (session.lightmode)
            include ../includes/csslight.pug
        else 
            include ../includes/cssdark.pug

        if (session == undefined || session.loggedin == undefined || !session.loggedin)
            include ../includes/loggedout.pug
        else
            p(style='font-weight: bold')= "Hello " + session.username + "!"
            include ../includes/loggedin.pug
        
        hr
        h1 Home
        hr
        
        p Welcome to the Task Manager!
        br
        p Light Mode
            button#switchmode(type='button')
            span(style='margin-left: 7px') Dark Mode
        
        script.
            document.getElementById('switchmode').addEventListener("click", function(){
                let z = new XMLHttpRequest();
                z.open("POST", "http://localhost:3000/switchmode");
                z.setRequestHeader("Content-Type", "application/json");
            });
