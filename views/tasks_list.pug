html
    head
        title Task Manager / Users
    body
        if (session.lightmode)
            include ../includes/csslight.pug
        else 
            include ../includes/cssdark.pug
        
        if (session == undefined || session.loggedin == undefined || !session.loggedin)
            include ../includes/loggedout.pug
        else
            p(style="font-weight: bold; margin-left: 7px")= "User: " + session.username
            include ../includes/loggedin.pug
        
        #main
            h1 Tasks

            label(for='task-search')= "Search for Tasks: "
            input#tasksearch(type='text' name='task-search')
            span
                button#tasksearchbutton(type='button')= "Search"
                a(href="/tasks/icon" style="margin-left: 50%")= "[ Icon View ]"
                a(href="/tasks/list" style="margin-left: 1%; color: grey")="[ List View ]" 

            h4(style= "width: 15%; float: left;") Name
            h4(style= "width: 15%; margin-left: 2.5%; float: left") Users
            h4(style= "width: 15%; margin-left: 2.5%; float: left") Due Date
            h4(style= "width: 15%; margin-left: 2.5%; float: left") Status
            h4(style= "width: 15%; margin-left: 2.5%; float: left") Priority

            for t in tasks
                span
                    a(href="/" + t._id style= "height: 30px; width: 15%; float: left; margin-top: 16px; margin-left: 7px")= t.name
                    p(style= "height: 30px; width: 15%; margin-left: 2.5%; float: left")= t.username
                    p(style= "height: 30px; width: 15%; margin-left: 2.5%; float: left")= t.datetimeformat
                    p(style= "height: 30px; width: 15%; margin-left: 2.5%; float: left")= t.status
                    p(style= "height: 30px; width: 15%; margin-left: 2.5%; float: left")= t.priority
    
        script.
            document.getElementById('tasksearchbutton').addEventListener("click", function(){
                let link = "/tasks/list/" + document.getElementById("tasksearch").value;
                window.location.assign(link);
            });